@page "/mermaidtest"
<h3>MermaidTest</h3>

<div>
    <button @onclick="TriggerClick">
        Trigger Mermaid diagram render
    </button>
</div>

<Mermaid Id="One" @ref="mermaidOne"></Mermaid>
<Mermaid Id="Two" @ref="mermaidTwo"></Mermaid>

@code {
    Mermaid mermaidOne;
    Mermaid mermaidTwo;

    public async Task TriggerClick()
    {
        string mOneText = @"C4Context 
       Person_Ext(CUSTOMER, ""Customer"", ""A customer of the bank, with personal bank accounts"") 
       Enterprise_Boundary(INTERNET_BANKING, ""Internet Banking"") {
            Container(WEB_APPLICATION, ""Web Application"", ""Delivers the static content and the Internet banking SPA"", ""Java, Spring MVC"")
            }";

        string mTwoText = "graph LR \n" +
            "A[Client] --- B[Load Balancer] \n" +
            "B-->C[Server01] \n" +
            "B-->D(Server02) \n";
        await mermaidOne.DisplayDiagram(mOneText);
        await mermaidTwo.DisplayDiagram(mTwoText);

        //        await JSRuntime.InvokeVoidAsync("renderMermaidDiagram", input);
    }
}
